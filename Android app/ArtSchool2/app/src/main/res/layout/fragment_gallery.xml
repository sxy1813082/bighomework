<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">
    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf = "parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/gallery_image"
            android:onClick="show_gallery_image1"
            tools:ignore="OnClick">
        </ImageView>
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/gallery_image2"
            android:onClick="show_gallery_image2"
            >
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf ="@id/liner1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="beijing gallery\nbeijing\n国家博物馆"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/gallery_text1"
            >
        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="tianjin gallery\nTianJing\n海洋博物馆"
            android:id="@+id/gallery_text2"
            >
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf ="@id/liner2"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/gallery_image3"
            android:onClick="show_gallery_image3"
            >
        </ImageView>
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/gallery_image4"
            android:onClick="show_gallery_image4"
            >
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf ="@id/liner3"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="shanghai gallery\nbeijing\n外滩博物馆"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/gallery_text3"
            >
        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="沙雕 gallery\nTianJing\n三里屯博物馆"
            android:id="@+id/gallery_text4"
            >
        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>