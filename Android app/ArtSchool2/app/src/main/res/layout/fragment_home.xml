<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/artschool"
                android:layout_width="411dp"
                android:layout_height="68dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/cantata_one"
                android:letterSpacing="0.4"
                android:lineSpacingExtra="12sp"
                android:text="ART\nSCHOOL"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/clickbelow"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:fontFamily="@font/cantata_one"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#c59292"
                android:letterSpacing="0.5"
                android:gravity="center_horizontal"
                android:text="CLICK BELOW"
                app:layout_constraintTop_toBottomOf="@+id/artschool"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:background="#818181"
                android:backgroundTint="@color/grey"
                android:fadeScrollbars="false"
                android:scrollbarSize="5dp"
                app:layout_constraintTop_toBottomOf="@+id/clickbelow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:backgroundTint="@color/background"
                    android:orientation="horizontal">

                    <ImageButton
                        android:scaleType="centerCrop"
                        android:id="@+id/show_image"
                        android:layout_width="0dp"
                        android:layout_height="305dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:onClick="showImage"
                        tools:ignore="OnClick" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:scaleType="centerCrop"
                            android:id="@+id/show_image2"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:padding="0dp"
                            android:onClick="showImage1"
                            tools:ignore="OnClick" />

                        <ImageButton
                            android:scaleType="centerCrop"
                            android:id="@+id/show_image3"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="5dp"
                            android:padding="0dp"
                            android:onClick="showImage2"
                            app:layout_constraintTop_toBottomOf="@+id/show_image2"
                            tools:ignore="OnClick" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <HorizontalScrollView
                android:layout_marginTop="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>